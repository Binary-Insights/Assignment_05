# Airflow Configuration
AIRFLOW_HOME=/app/airflow_home
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__CORE__UNIT_TEST_MODE=false
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__DAGS_FOLDER=/app/dags
AIRFLOW__CORE__LOGS_FOLDER=/app/logs
AIRFLOW__CORE__PLUGINS_FOLDER=/app/plugins
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:5432/airflow
AIRFLOW__SCHEDULER__CATCHUP_BY_DEFAULT=false
AIRFLOW__WEBSERVER__AUTHENTICATE=false
AIRFLOW__WEBSERVER__BASE_LOG_FOLDER=/app/logs

# PostgreSQL Configuration
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# Application Configuration
API_HOST=fastapi
API_PORT=8000
STREAMLIT_SERVER_PORT=8501

# Optional: Add your API keys here
# OPENAI_API_KEY=your_key_here
# ANTHROPIC_API_KEY=your_key_here
# PINECONE_API_KEY=your_key_here
